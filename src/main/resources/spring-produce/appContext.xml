<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="  
http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="mybatisContext.xml" />
	<context:property-placeholder ignore-unresolvable="true" location="classpath:property-produce/*.properties"/>

	<!-- Spring MVC -->
	<context:component-scan base-package="org.flylib.site.spring"></context:component-scan>
	<context:component-scan base-package="org.flylib.site.*.service"></context:component-scan>
	<context:component-scan base-package="org.flylib.site.controller.**"></context:component-scan>
	<context:component-scan base-package="org.flylib.site.spring"></context:component-scan>
</beans>
